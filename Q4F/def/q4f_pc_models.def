model model_pc_base {
	inherit							model_player_marine
}

entityDef model_pc_head_default {
	"inherit"		"char_marinehead_default"
	"spawnclass"	"rvClientAFAttachment"
	
	"noclipmodel"	"1"
}

//--------------------------------------------------------------------------
// Scout
//--------------------------------------------------------------------------
entityDef model_pc_scout_head {
	"inherit"		"model_pc_head_default"
	"model"			"model_pc_scout_head"
}

model model_pc_scout_head {		// bidwell
	mesh						models/classes/scout/scout_head.md5mesh

	channel legs				( *origin -*viseme_bone -*head_channel )
	channel torso				( *viseme_bone  )
	channel head				( *head_channel -ruplid -rlolid -luplid -llolid )
	channel eyelids				( ruplid rlolid luplid llolid )

	anim idle					models/classes/scout/scout_head_idle.md5anim
}

entityDef model_pc_scout {
	"inherit"		"model_pc_base"
	
	"model"			"model_pc_scout"
	"def_head"		"model_pc_scout_head"
	"head_offset"	"0 0 0"
}

model model_pc_scout {
	inherit							model_pc_base
	mesh							models/classes/scout/scout.md5mesh
}

